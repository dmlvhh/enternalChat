{
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "electron-main/**/*.ts",
    "electron-preload/**/*.ts",
    "electron-preload/preload.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".", // 这代表相对于此文件的位置
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
